{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node",
    ],
    "lib": [
      "esnext"
    ],
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
